{
  "extends": "eslint:recommended",

  "env": {
    "es6": false,
    "node": true,
  },

  "rules": {
    "indent":                 ["error", 2],
    "quotes":                 ["error", "single"],
    "comma-dangle":           ["error", "only-multiline"],
    "object-curly-spacing":   ["error", "never"],
    "space-in-parens":        ["error", "never"],
    "linebreak-style":        [ 2, "unix" ],
    "semi":                   ["error", "always"]
  }
}
